<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="componentPlusBaseStyle" parent="Theme.AppCompat.DayNight">
        <!-- Nice little font -->
        <item name="fontFamily">@font/nunito_sans</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">@style/spinnerBoldItemStyle</item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="spinnerDropDownItemStyle">@style/spinnerBoldDropDownItemStyle</item>

    </style>

    <style name="spinnerBoldItemStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="spinnerBoldDropDownItemStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

        <item name="dropdownListPreferredItemHeight">1dp</item>
        <item name="listPreferredItemHeightLarge">1dp</item>
        <item name="listPreferredItemHeightSmall">1dp</item>
        <item name="listPreferredItemPaddingStart">1dp</item>
        <item name="listPreferredItemPaddingEnd">1dp</item>

        <item name="android:layout_height">150dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>

        <item name="android:gravity">center</item>
    </style>

</resources>