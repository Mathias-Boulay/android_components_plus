<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/edit_text_component_background"
    android:theme="@style/componentPlusBaseStyle"
    >

    <Spinner
        android:id="@+id/numberListSpinner"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@null"
        android:entries="@array/phone_numbers"
        android:gravity="center"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:id="@+id/hintTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="hint"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/component_simple_edit_text"
        app:layout_constraintTop_toTopOf="parent" />

    <fr.spse.components_plus.components.SimpleEditText
        android:id="@+id/component_simple_edit_text"
        android:layout_width="400dp"
        android:layout_height="wrap_content"

        android:background="@null"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"



        android:text="hint"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/numberListSpinner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>